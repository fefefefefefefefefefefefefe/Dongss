# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# DB / 서버
DATABASE_URL="mysql://root:1234@localhost:3306/dongstory_dev2?charset=utf8mb4"
# DATABASE_URL="mysql://root:1234@localhost:3306/dongstory"
PORT=3000
NODE_ENV=development

# 인증
JWT_SECRET=super-long-random-secret
ACCESS_EXPIRES=15m
REFRESH_EXPIRES=7d


# 업로드/정적 URL (절대 URL 만들 때 사용)
# PC 로컬 IP로 넣으면 실제 기기에서도 이미지가 보여요.
PUBLIC_BASE_URL=http://192.168.0.10:3000

# (선택) 업로드 경로/크기
UPLOAD_DIR=uploads
MAX_UPLOAD_MB=10

# (선택) CORS – 프론트 도메인/포트
CORS_ORIGIN=http://localhost:5173
